<%= simple_form_for [@restaurant, @menu] do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs menu">
    <%= f.input :name %>
    <%= f.input :description, placeholder: "The best dish in the world" %>
    <%= f.input :category, selection: true, collection: ["Breakfast", "Lunch", "Dinner", "Starters", "Mains", "Desserts", "Drinks"] %>
    <%= f.input :price, as: :numeric %>
    <%= f.input :photo, as: :file %>
  </div>

  <div class="form-actions flex items-center mt-">
    <%= f.button :submit, "Add", class: "bg-indigo-600 text-white px-3 py-2 mt-4 rounded-md w-full" %>
  </div>
<% end %>
