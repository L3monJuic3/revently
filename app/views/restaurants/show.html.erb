<%# <div class="w-3/4 h-screen mt-11 mx-auto"> %>
<div class="show-container">
  <h1 class="text-3xl bold"><%= @restaurant.name %></h1>
  <h3 class="mt-1"><%= @restaurant.address %></h3>
  <h3 class="mt-1"><%= @restaurant.phone_number %></h3>
  <div class="w-full">
    <div class="w-full mt-4 flex space-between gap-3">
      <div class="flex">
        <img src="https://images.unsplash.com/photo-1560053608-13721e0d69e8?crop=entropy&cs=tinysrgb&fit=crop&fm=jpg&h=400&ixid=MnwxfDB8MXxyYW5kb218MHx8cmVzdGF1cmFudHx8fHx8fDE2NjE5NTIyODg&ixlib=rb-1.2.1&q=80&utm_campaign=api-credit&utm_medium=referral&utm_source=unsplash_source&w=650" class="rounded-2xl" />
      </div>
      <div>
        <img src="https://images.unsplash.com/photo-1482049016688-2d3e1b311543?crop=entropy&cs=tinysrgb&fit=crop&fm=jpg&h=200&ixid=MnwxfDB8MXxyYW5kb218MHx8cmVzdGF1cmFudHx8fHx8fDE2NjE5NTE4Mjc&ixlib=rb-1.2.1&q=80&utm_campaign=api-credit&utm_medium=referral&utm_source=unsplash_source&w=200" class="rounded-2xl" />
        <img src="https://images.unsplash.com/photo-1592861956120-e524fc739696?crop=entropy&cs=tinysrgb&fit=crop&fm=jpg&h=200&ixid=MnwxfDB8MXxyYW5kb218MHx8cmVzdGF1cmFudHx8fHx8fDE2NjE5NTE5MTM&ixlib=rb-1.2.1&q=80&utm_campaign=api-credit&utm_medium=referral&utm_source=unsplash_source&w=200" class="rounded-2xl mt-3" />
      </div>
      <div>
        <img src="https://images.unsplash.com/photo-1604328471151-b52226907017?crop=entropy&cs=tinysrgb&fit=crop&fm=jpg&h=200&ixid=MnwxfDB8MXxyYW5kb218MHx8cmVzdGF1cmFudHx8fHx8fDE2NjE5NTE5NzI&ixlib=rb-1.2.1&q=80&utm_campaign=api-credit&utm_medium=referral&utm_source=unsplash_source&w=200" class="rounded-2xl" />
        <img src="https://images.unsplash.com/photo-1564759224907-65b945ff0e84?crop=entropy&cs=tinysrgb&fit=crop&fm=jpg&h=200&ixid=MnwxfDB8MXxyYW5kb218MHx8cmVzdGF1cmFudHx8fHx8fDE2NjE5NTIwODk&ixlib=rb-1.2.1&q=80&utm_campaign=api-credit&utm_medium=referral&utm_source=unsplash_source&w=200" class="rounded-2xl mt-3" />
      </div>
    </div>

    <div class="show-reservation-container flex justify-between">
      <div class="show-info-container flex justify-between mt-3">
        <div>
          <h2 class="text-2xl bold"><%= @restaurant.venue_type %> at <%= @restaurant.name %></h2>
          <h3 class="text-xl mt-1"><%= @restaurant.cuisine %> cuisine</h3>
          <div class="text-lg mt-2">
            <% checked = @restaurant.rating.ceil %>
            <% checked.times do %>
              <span class="fa fa-star checked"></span>
            <% end %>
            <% unchecked = 5 - (@restaurant.rating.ceil) %>
            <% unchecked.times do %>
              <span class="fa fa-star"></span>
            <% end %>
          </div>
        </div>
        <div class="flex w-5/12 justify-end items-start gap-2">
          <div class="flex w-16 justify-center items-center">
            <h2 class="mt-2 text-xl"><%= @restaurant.chairs %></h2>
            <i class="fa-solid fa-chair ml-2 text-2xl"></i>
          </div>
          <div class="flex w-16 justify-center items-center">
            <h2 class="mt-2 text-xl"><%= @restaurant.max_guests %></h2>
            <i class="fa-solid fa-male ml-2 text-2xl"></i>
          </div>
          <div class="flex justify-center items-center w-16">
            <h2 class="mt-2 text-xl">25</h2>
            <i class="fas fa-beer ml-2 text-2xl"></i>
          </div>
        </div>
      </div>
      <div class="booking-container flex justify-center p-3 sticky top-0">
        <div class="w-11/12">
          <div class="w-full p-3 border shadow-md rounded-md">
            <div class="mb-3">
            <%= simple_form_for [@restaurant, Reservation.new] do |f| %>
              <div class="text-center text-lg font-medium">
                <%= f.input :booking, label: "Choose a date", as: :date, html5: true %>
              </div>
              <div class="reserve-btn w-full rounded-md p-2 text-center text-bold">
                <%= f.submit "Reserve" %>
              </div>
            <% end %>
            </div>
            <div class="flex justify-between px-3 pt-3 mt-3 border-top">
              <p class="text-md text-bold">Total: </p>
              <p class="text-md text-bold">$<%= @restaurant.price %></p>
            </div>
        </div>
      </div>
    </div>
  </div>
  <div class="mt-10">
    <h2 class="text-3xl">Menu</h2>
    <div class="mt-4">
      <% @restaurant.menus.each do |menu| %>
        <div class="flex flex-wrap justify-start mt-3 gap-4">
          <div>
            <img src="https://placeimg.com/150/150/arch" class="rounded-2xl" />
          </div>
          <div class="w-96 ml-5">
            <h1 class="text-xl font-semibold"><%= menu.name %></h1>
            <p class="text-sm"><%= menu.description %></p>
            <h2 class="font-semibold mt-2">$<%= menu.price.round(2) %></h2>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div style="width: 100%; height: 600px; margin: 50px auto;"
    data-controller="map"
    data-map-marker-value="<%= @marker.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
