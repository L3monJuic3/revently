<div class="card-container">
  <%= link_to restaurant do %>
    <div class="w-full">
      <img src="https://placeimg.com/400/380/arch" class="rounded-2xl" />
    </div>
    <div class="w-full flex justify-between items-center mt-3">
      <h1 class="font-semibold"><%= restaurant.name %></h1>
      <div class="flex items-center gap-2">
        <div class="flex items-center gap-1">
          <i class="fas fa-chair text-sm"></i>
          <p>14</p>
        </div>
        <div class="flex items-center gap-1">
          <i class="fas fa-male text"></i>
          <p>25</p>
        </div>
      </div>
    </div>
    <h2 class="text-gray-500 text-sm"><%= restaurant.cuisine %></h2>
    <h2 class="text-gray-500 text-sm">Private room only</h2>
    <div class="w-full flex justify-between items-center">
      <h2 class="mt-2 font-semibold">$500/hr</h2>
      <h2><i class="fa-solid fa-star text-xs mr-1"></i>4.9</h2>
    </div>
  <% end %>
</div>
