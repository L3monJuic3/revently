<div>
  <div class="flex flex-column justify-center items-center">
    <h1 class="text-4xl font-bold">Your Restaurants</h1>
    <div class="bg-indigo-500 px-8 py-2 rounded-xl text-white no-underline hover:bg-indigo-700 w-80 flex justify-center items-center gap-2 mt-3 mb-5">
      <i class="fa-solid fa-plus"></i>
      <p><%= link_to "Add Restaurant", new_restaurant_path, class: "no-underline hover:text-white"%></p>
    </div>
  </div>
  <div class="flex flex-wrap gap-4 justify-center px-20">

    <% @host_restaurants.each do |host_restaurant| %>

      <div class="card-container">
        <%= link_to host_restaurant_path(host_restaurant) do %>
          <div class="w-full">
            <img src=<%= "https://source.unsplash.com/random/400x380/?restaurant-#{host_restaurant.cuisine}" %> class="rounded-2xl" />
          </div>
          <div class="w-full flex justify-between items-center mt-3">
            <h1 class="font-semibold"><%= host_restaurant.name %></h1>
            <div class="flex items-center gap-2">
              <div class="flex items-center gap-1">
                <i class="fas fa-chair text-sm"></i>
                <p>14</p>
              </div>
              <div class="flex items-center gap-1">
                <i class="fas fa-male text"></i>
                <p>25</p>
              </div>
            </div>
          </div>
          <h2 class="text-gray-500 text-sm"><%= host_restaurant.cuisine %></h2>
          <h2 class="text-gray-500 text-sm"><%= host_restaurant.venue_type %></h2>
          <div class="w-full flex justify-between items-center">
            <h2 class="mt-2 font-semibold">$<%= host_restaurant.price %>/hr</h2>
            <h2><i class="fa-solid fa-star text-xs mr-1"></i><%= host_restaurant.rating.round(1) %></h2>
          </div>
        <% end %>
      </div>

    <% end %>
  </div>

  <div style="width: 85%; height: 600px; margin: 50px auto; z-index: 0;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>

<div class="mt-12">
  <%= render "shared/footer" %>
</div>
